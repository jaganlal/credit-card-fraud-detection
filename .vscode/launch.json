  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port=1975"
      ],
      "jinja": true
    },
    {
      "name": "Python: Docker File",
      "type": "python",
      "request": "attach",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/app/src/",
          "remoteRoot": "/work",
          "console": "integratedTerminal"
        }
      ],
      "port": 5678,
      "host": "127.0.0.1"
    }
  ]
}